.PHONY: init start


HEADER_SPACER := =============================================
DOCKER_IMAGE := 2357gi/react-tutorial



all: start

init:
	@echo $(HEADER_SPACER)
	@echo "ğŸ‰init dir"
	@echo $(HEADER_SPACER)
	mkdir -p app/node_modules
	@echo "ğŸ—ï¸  build docker image"
	docker build -t $(DOCKER_IMAGE) .
	@echo "âš¡ï¸create react app"
	docker run -it --rm -v ./app /usr/src/app $(DOCKER_IMAGE) cd ..;npx create-react-app app

start:
	@echo $(HEADER_SPACER)
	@echo "âš¡ï¸start react app"
	@echo $(HEADER_SPACER)
	@echo "ğŸ—ï¸  build docker image"
	docker build -t $(DOCKER_IMAGE) .
	@echo "âš¡ï¸start"
	docker run -it --rm -p 3000:3000 -v `pwd`/app:/usr/src/app $(DOCKER_IMAGE)

